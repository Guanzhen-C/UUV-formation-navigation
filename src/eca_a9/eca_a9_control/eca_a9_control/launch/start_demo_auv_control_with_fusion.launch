<?xml version="1.0"?>
<launch>
  <!-- 使用组合导航系统的AUV控制演示启动文件 -->
  
  <!-- Vehicle's initial position -->
  <arg name="x" default="0"/>
  <arg name="y" default="0"/>
  <arg name="z" default="-5"/>
  <arg name="yaw" default="0"/>

  <arg name="record" default="false"/>
  <arg name="bag_filename" default="recording.bag"/>
  <arg name="use_ned_frame" default="false"/>
  <!-- Mission latitude in radians for Earth Coriolis force calculation -->
  <arg name="mission_latitude" default="0.3183" doc="Mission latitude in radians (default: 18.25°N Sanya)"/>
  <arg name="gui_on" default="true"/>

  <!-- 启动AUV模型 -->
  <include file="$(find eca_a9_description)/launch/upload_eca_a9.launch">
    <arg name="x" value="$(arg x)"/>
    <arg name="y" value="$(arg y)"/>
    <arg name="z" value="$(arg z)"/>
    <arg name="yaw" value="$(arg yaw)"/>
    <arg name="mission_latitude" value="$(arg mission_latitude)"/>
  </include>

  <!-- 启动组合导航系统 -->
  <include file="$(find eca_a9_control)/launch/start_combined_navigation.launch">
    <arg name="namespace" value="eca_a9"/>
    <arg name="rate" value="20.0"/>
  </include>

  <!-- 启动使用组合导航的几何跟踪控制 -->
  <include file="$(find eca_a9_control)/launch/start_geometric_tracking_with_fusion.launch">
    <arg name="namespace" value="eca_a9"/>
    <arg name="rate" value="20.0"/>
  </include>
    
  <!-- Initialize the recording of the simulation according to the record flag -->
  <include file="$(find eca_a9_gazebo)/launch/record_demo.launch">
    <arg name="record" value="$(arg record)"/>
    <arg name="use_ned_frame" value="$(arg use_ned_frame)"/>
    <arg name="bag_filename" value="$(arg bag_filename)"/>
  </include>

  <!-- 启动RViz可视化 -->
  <group if="$(arg gui_on)">
    <node name="rviz" pkg="rviz" type="rviz" output="screen" args="-d $(find eca_a9_control)/rviz/eca_a9_control.rviz"/>
  </group>

</launch> 