<launch>
  <!-- ===================================================================================== -->
  <!-- DUAL AUV DEMO - STAGE 2: SEND TRAJECTORY GOAL -->
  <!-- ===================================================================================== -->

  <!-- Common trajectory parameters -->
  <arg name="radius" default="50"/>
  <arg name="center_x" default="0"/>
  <arg name="center_y" default="0"/>
  <arg name="center_z" default="-20"/>
  <arg name="max_forward_speed" default="2"/>

  <!-- Send trajectory goal to AUV 1 -->
  <include file="$(find uuv_control_utils)/launch/start_circular_trajectory.launch">
      <arg name="uuv_name" value="eca_a9_1"/>
      <arg name="radius" value="$(arg radius)"/>
      <arg name="center_x" value="$(arg center_x)"/>
      <arg name="center_y" value="$(arg center_y)"/>
      <arg name="center_z" value="$(arg center_z)"/>
      <arg name="max_forward_speed" value="$(arg max_forward_speed)"/>
      <arg name="heading_offset" value="0"/>
  </include>

  <!-- Send trajectory goal to AUV 2, with a 180-degree heading offset -->
  <include file="$(find uuv_control_utils)/launch/start_circular_trajectory.launch">
      <arg name="uuv_name" value="eca_a9_2"/>
      <arg name="radius" value="$(arg radius)"/>
      <arg name="center_x" value="$(arg center_x)"/>
      <arg name="center_y" value="$(arg center_y)"/>
      <arg name="center_z" value="$(arg center_z)"/>
      <arg name="max_forward_speed" value="$(arg max_forward_speed)"/>
      <arg name="heading_offset" value="180"/>
  </include>

</launch>
